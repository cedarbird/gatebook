<!DOCTYPE html>
<html>
<head>
  <title>Gatebook</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header class="navbar">
<div id="logo"><%= link_to "Gatebook", root_path %></div>
  <% if user_signed_in? %>
    <ul class="header-right">
      <li><%= link_to "User List", users_path %></li>
      <li><%= link_to current_user.email, current_user %></li>
      <li><%= link_to "logout",  destroy_user_session_path, method: :delete %></li>

    </ul>
  <% else %>
    <ul class="header-right">
      <li><%= link_to "Outline", about_path %></li>
      <li><%= link_to "new user", new_user_registration_path %></li>
      <li><%= link_to "login", new_user_session_path %></li>
    </ul>
  <% end %>
</header>
<p class="alert alert-success"><%= notice %></p>
<p class="alert alert-danger"><%= alert %></p>

<div class="container"><%= yield %></div> 

<div class="container">
  <footer class="footer">
    <div class="small">
     &copy; 2017 Progate, Inc.
    </div>
  </footer>
</div>

</body>
</html>
